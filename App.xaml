<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="VEPS_Plus.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VEPS_Plus"
    xmlns:conv="clr-namespace:VEPS_Plus.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters available app-wide -->
            <conv:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <conv:GreaterThanZeroToBoolConverter x:Key="GreaterThanZeroToBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
